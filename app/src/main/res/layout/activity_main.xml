<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/d_16"
        android:paddingTop="@dimen/d_16"
        android:paddingRight="@dimen/d_16"
        android:paddingBottom="@dimen/d_16"
        android:background="@color/turquoise"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:textSize="@dimen/t_36"
            android:layout_marginTop="@dimen/d_64"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/iv_ball"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ball1"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/btnAsk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:textColor="@color/appWhite"
            android:text="@string/btn_title"
            android:layout_marginBottom="@dimen/d_16"
            android:layout_alignParentBottom="true"
            />


    </RelativeLayout>
</layout>